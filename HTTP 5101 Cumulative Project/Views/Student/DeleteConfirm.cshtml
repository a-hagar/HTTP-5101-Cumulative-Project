@model HTTP_5101_Cumulative_Project.Models.Student
@{
    ViewBag.Title = "DeleteConfirm";
}
<nav>
    <a class="link" href="/Student/Show/@Model.StudentId">Go Back</a>
</nav>

<h2>Are you sure you want to delete this student's info?</h2>
<p>@Model.StudentFname @Model.StudentLname</p>

<p style="font-weight:700;">This cannot be undone!</p>
<form method="post" action="/Student/Delete/@Model.StudentId">
    <input type="submit" class="deleteBtn" value="Delete Student"/>
</form>
