
@{
    ViewBag.Title = "New";
}

<h2>New Student</h2>
<p>Enter the information for a new student</p>
<form method="post" action="/Student/Create" name="addStudent">
    <div>
        <label>Student's First Name: </label>
        <input type="text" name="StudentFname" id="fname" />
        <span id="errorFname"></span>
    </div>
    <div>
        <label>Teacher's Last Name: </label>
        <input type="text" name="StudentLname" id="lname" />
        <span id="errorLname"></span>
    </div>
    <div>
        <label>Student Number: </label>
        <input type="text" name="StudentNum" id="studentNo" />
        <span id="errorStudentNo"></span>
    </div>
    <div>
        <input type="submit" value="Add Student" id="submitBtn" />
    </div>

</form>

