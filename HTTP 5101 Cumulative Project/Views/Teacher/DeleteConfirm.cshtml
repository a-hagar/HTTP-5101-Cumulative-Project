@model HTTP_5101_Cumulative_Project.Models.Teacher
@{
    ViewBag.Title = "DeleteConfirm"; }


<nav>
    <a class="link" href="/Teacher/Show/@Model.TeacherId">Go Back</a>
</nav>

<h2>Are you sure you want to delete this teacher's info?</h2>
<p>@Model.TeacherFname @Model.TeacherLname</p>

<p style="font-weight:700;">This cannot be undone!</p>
<form method="post" action="/Teacher/Delete/@Model.TeacherId">
    <input type="submit" class="deleteBtn" value="Delete Teacher" />
</form>
