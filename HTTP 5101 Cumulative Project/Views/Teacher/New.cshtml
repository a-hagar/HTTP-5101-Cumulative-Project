
@{
    ViewBag.Title = "New";
}
<nav>
    <a class="link" href="/Teacher/List">Back to Teachers</a>
</nav>

<h2>New Teacher</h2>
<p>Enter the information for a new teacher:</p>
<form method="post" action="/Teacher/Create" name="addTeacher">
    <div>
        <label>Teacher's First Name</label>
        <input type="text" name="TeacherFname" />
        <span id="errorFname"></span>
    </div>
    <div>
        <label>Teacher's Last Name</label>
        <input type="text" name="TeacherLname" />
        <span id="errorLname"></span>
    </div>
    <div>
        <label>Teacher's Salary</label>
        <input type="number" id="salary" step="1" name="Salary" />
        <span id="errorSalary"></span>
    </div>
    <div>
        <label>Teacher's Employee Number</label>
        <input type="text" name="EmployeeNum" />
        <span id="errorEmployeeNum"></span>
    </div>
    <div>
        <input type="submit" value="Add Teacher" />
    </div>

</form>

