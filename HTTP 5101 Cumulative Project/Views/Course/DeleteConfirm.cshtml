@model HTTP_5101_Cumulative_Project.Models.Course
@{
    ViewBag.Title = "DeleteConfirm";
}
<nav>
    <a class="link" href="/Class/Show/@Model.CourseId">Go Back</a>
</nav>

<h2>Are you sure you want to delete this course's info?</h2>
<p>@Model.CourseCode.ToUpper() @Model.CourseName</p>

<p style="font-weight:700;">This cannot be undone!</p>
<form method="post" action="/Course/Delete/@Model.CourseId">
    <input type="submit" class="deleteBtn" value="Delete Course" />
</form>
