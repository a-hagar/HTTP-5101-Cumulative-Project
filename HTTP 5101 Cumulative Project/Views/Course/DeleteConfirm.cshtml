@model HTTP_5101_Cumulative_Project.Models.Class
@{
    ViewBag.Title = "DeleteConfirm";
}
<nav>
    <a class="link" href="/Class/Show/@Model.ClassId">Go Back</a>
</nav>

<h2>Are you sure you want to delete this teacher?</h2>
<p>@Model.ClassCode @Model.ClassName</p>

<p>This cannot be undone!</p>
<form method="post" action="/Class/Delete/@Model.ClassId">
    <input type="submit" style="margin: 0 auto; display: block;" value="Delete Course" />
</form>
